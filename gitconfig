[push]
	default = simple
[core]
	editor = vim
	pager = less
[merge]
	tool = vimdiff
[color]
	ui = true
[alias]
	a = add
	ap = add --patch
	br = branch
	bra = branch --all
	c = commit --verbose
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch
	fa = fetch --all
	ff = merge --ff-only
	new = log ..@{u}
	s = status
