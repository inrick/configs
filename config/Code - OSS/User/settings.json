{
    "telemetry.telemetryLevel": "off",
    "editor.fontFamily": "'Source Code Pro Medium'",
    "editor.tabSize": 2,
    "editor.cursorStyle": "block",
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "none",
    "editor.lineNumbers": "on",
    "editor.renderFinalNewline": false,
    "editor.overviewRulerBorder": true,
    "editor.hideCursorInOverviewRuler": true,
    "editor.scrollbar.vertical": "auto",
    "editor.minimap.enabled": true,
    "editor.guides.indentation": true,
    "editor.wordWrap": "on",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.lightbulb.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.fontSize": 15,
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "none",
    "files.insertFinalNewline": true,
    "debug.console.fontSize": 16,
    "markdown.preview.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "workbench.colorTheme": "Cloud",
    "workbench.colorCustomizations": {
        "editorError.foreground":   "#00000000",
        "editorWarning.foreground": "#00000000",
        "editorInfo.foreground":    "#00000000"
    },

    "vim.statusBarColorControl": false,
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visual": "block",
    "vim.cursorStylePerMode.visualblock": "block",
    "vim.cursorStylePerMode.visualline": "block",
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-b>": true,
        "<C-f>": true,
        "<C-j>": false,
        "<C-s>": false,
        "<C-z>": false,
    },
    "vim.normalModeKeyBindings": [],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<bs>"],
            "commands": [
                ":nohlsearch"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": ["<up>"],
            "after": ["<C-y>"]
        },
        {
            "before": ["<down>"],
            "after": ["<C-e>"]
        },
        {
            "before": [
                "Q"
            ],
            "after": [
                "g", "q", "i", "p"
            ]
        },
        {
            "before": ["<C-q>"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "Q"
            ],
            "after": [
                "g", "q"
            ]
        }
    ],
    "vim.leader": ",",
    "vim.hlsearch": true,
    "vim.surround": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.incsearch": true,

    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "gruvboxMaterial.italicComments": false,
    "gruvboxMaterial.lightContrast": "hard",
    "lldb.launch.initCommands": [
        "settings set target.x86-disassembly-flavor intel",
    ],
    "python.analysis.logLevel": "Information",
    "python.experiments.enabled": false,
    "rust-analyzer.assist.importGranularity": "module",
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.updates.askBeforeDownload": true,
    "rust-analyzer.inlayHints.enable": false,
}
